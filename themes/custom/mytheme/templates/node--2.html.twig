{# web/themes/custom/mytheme/templates/node--2.html.twig #}
{# --- TIMELINE CONTENT START --- #}
{{ attach_library('mytheme/timeline') }}
	{% if theme_path is not defined %}
{% set theme_path = url('<front>')|render ~ 'themes/custom/mytheme' %}
{% endif %}

<section class="relative w-full h-screen overflow-hidden">
  <!-- BG image -->
  <img src="{{ theme_path }}/assets/static/timeline/Timeline_Header_Image.jpg"
       alt="" class="absolute inset-0 w-full h-full object-cover -z-10 pointer-events-none" />

  <!-- Centered content -->
  <div class="absolute inset-0 flex items-center justify-center">
    <div class="flex flex-col items-center text-center gap-6 px-4">
      <img src="{{ theme_path }}/assets/static/timeline/60years.svg"
           alt="60 years"
           class="w-3/4 sm:w-1/2 md:w-2/5 lg:w-1/3 xl:w-1/4 max-w-[640px] min-w-[180px]" />

      <p data-aos="fade-up" class="max-w-4xl text-[#e5e0d9] font-thin text-[29px] leading-relaxed sm:leading-relaxed md:leading-normal">
        Adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore
        magna aliqua. Quis ipsum suspendisse ultrices gravida.
      </p>
    </div>
  </div>
</section>

<div class="tile-bg">
<section>
	<div class="w-full flex justify-center !px-4 sm:!px-6 lg:!px-8 !py-10 sm:!py-14 lg:!py-20 text-[#606060] !mb-12 sm:!mb-16 lg:!mb-20">
		<p data-aos="fade-up" class="text-center max-w-6xl text-[29px] leading-relaxed sm:leading-relaxed md:leading-normal">
			Adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore
			          magna aliqua. Quis ipsum suspendisse ultrices gravida. Risus commodo
			          viverra maecenas accumsan lacus vel facilisis.
		</p>
	</div>
</section>

<!-- Timeline Section (Canvas + UI Overlay) -->
<section
	class="relative timeline-section">
	<!-- Sticky container wrapper -->
	<div
		class="relative h-[500vh]">
		<!-- Sticky wrapper for both canvas and UI -->
		<div
			class="sticky top-0 left-0 w-full h-screen">
			<!-- Canvas container (background layer) -->
			<div id="canvas-container" class="absolute top-0 left-0 w-full h-screen z-[99]"></div>

			<!-- UI Overlay (foreground layer) -->
			<div class="ui-overlay absolute top-0 left-0 w-full h-screen pointer-events-none">
				<div class="relative font-thin flex flex-col sm:gap-0 items-center justify-center h-screen">
					<p class="year-display !mt-6 fade-anim z-[100]" id="yearDisplay">
						1965
					</p>
					<p class="info_text -translate-y-6 fade-anim z-[100]" id="infoText">
						Lorem ipsum dolor sit amet consectetur adipisicing elit.
						                Quisquam rerum dolor repudiandae at, illum similique
						                perspiciatis dolores dolorem debitis, veritatis illo nulla.
						                Assumenda, error voluptatem cumque eligendi nesciunt eius odit?
					</p>
				</div>

				<!-- Decorative circles - properly centered and responsive -->
				<div class="circle-container">
					<img src="{{ theme_path }}/assets/static/timeline/INNER_CIRCLE.svg" alt="" class="inner-circle"/>
					<img src="{{ theme_path }}/assets/static/timeline/OUTER_CIRCLE.svg" alt="" class="outer-circle"/>
					<img src="{{ theme_path }}/assets/static/timeline/bigcircle.svg" alt="" class="opacity-10">
				</div>
				<div class="timeline-bar" id="timelineBar"></div>
			</div>
		</div>
	</div>
</section>

<section
	class="!mt-60 relative">
	<!-- Bottom text -->
	<div class="w-full flex justify-center !px-4 sm:!px-6 lg:!px-8 !py-10 sm:!py-14 lg:!py-20 text-[#606060]  relative z-20">
		<p data-aos="fade-up" class="text-center max-w-6xl text-[29px] leading-relaxed sm:leading-relaxed md:leading-normal">
			Quis ipsum suspendisse ultrices gravida. Risus commodo viverra
			          maecenas accumsan lacus vel facilisis.
		</p>
	</div>
</section>
</div>
<section class="w-full bg-[#00629d] h-[10px]"></section>
{# --- TIMELINE CONTENT END --- #}

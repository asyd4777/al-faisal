{{ attach_library('mytheme/realestate') }}
	{% if theme_path is not defined %}
{% set theme_path = url('<front>')|render ~ 'themes/custom/mytheme' %}
{% endif %}
	<script>
window.theme_path = "{{ theme_path }}";
</script>
	<section
	class="w-[100%] h-[100vh] relative !mb-4 overflow-hidden"> <!-- Background autoplay video -->
	<video id="hero-video-1" class="absolute inset-0 w-full h-full object-cover z-0 opacity-0 transition-opacity duration-1000" muted playsinline poster="{{ theme_path }}/assets/static/realestate/AlFaisal_Real_Estate_Header.jpg">
		<source src="https://samplelib.com/lib/preview/mp4/sample-5s.mp4" type="video/mp4"/>
		Your browser does not support the video tag.
	</video>

	<!-- Poster overlay (visible initially and after video ends) -->
	<div id="video-poster-1" class="absolute inset-0 w-full h-full object-cover z-[1] bg-cover bg-center transition-opacity duration-1000" style="
				          background-image: url('{{ theme_path }}/assets/static/realestate/AlFaisal_Real_Estate_Header.jpg');
				        "></div>

	<!-- Centered overlay text with clickable play button -->
	<div class="absolute z-10 left-1/2 top-1/2 -translate-x-1/3 -translate-y-1/2 flex flex-col justify-start items-start md:flex-row md:items-center gap-3 text-left select-none">
		<img id="play-button-1" src="{{ theme_path }}/assets/static/Play_Icon.svg" alt="Play video" class="h-16 sm:h-20 cursor-pointer transition-transform hover:scale-110"/>
		<h2 id="hero-text-1" class="text-2xl sm:text-3xl md:text-4xl text-[#9B9AA3] leading-tight transition-opacity duration-1000 opacity-100">
			Al Jazi Real Estate
		</h2>

		<script>
			(function () {
var video = document.getElementById('hero-video-1');
var text = document.getElementById('hero-text-1');
if (! video || ! text) 
return;


function fadeOut() {
text.classList.remove('opacity-100');
text.classList.add('opacity-0');
}
function fadeIn() {
text.classList.remove('opacity-0');
text.classList.add('opacity-100');
}
video.addEventListener('play', fadeOut);
video.addEventListener('playing', fadeOut);
video.addEventListener('pause', fadeIn);
video.addEventListener('ended', fadeIn);
})();
		</script>
	</div>

	<!-- Decorative asset -->
	<img src="{{ theme_path }}/assets/static/Footer_Aseet.svg" alt="footer asset" class="absolute -bottom-2 left-10 h-20 sm:h-28 md:h-32 lg:h-30 xl:h-50 xl:!block hidden z-10" style="transform: scaleX(-1)"/>

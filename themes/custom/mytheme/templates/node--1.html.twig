{# web/themes/custom/mytheme/templates/node--1.html.twig #}
{# --- HOMEPAGE CONTENT START --- #}
	{% if theme_path is not defined %}
{% set theme_path = url('<front>')|render ~ 'themes/custom/mytheme' %}
{% endif %}
	<section
	class="w-[100%] h-[100vh] relative !mb-4 overflow-hidden"> <!-- Background autoplay video -->
	<video id="hero-video" class="absolute inset-0 w-full h-full object-cover z-0 opacity-0 transition-opacity duration-1000" muted playsinline poster="{{ theme_path }}/assets/static/Header_Video_Cover.jpg">
		<source src="https://samplelib.com/lib/preview/mp4/sample-5s.mp4" type="video/mp4"/>
		Your browser does not support the video tag.
	</video>

	<!-- Poster overlay (visible initially and after video ends) -->
	<div id="video-poster" class="absolute inset-0 w-full h-full object-cover z-[1] bg-cover bg-center transition-opacity duration-1000" style="background-image: url('{{ theme_path }}/assets/static/Header_Video_Cover.jpg')"></div>

	<!-- Centered overlay text with clickable play button -->
	<div class="absolute z-10 left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 flex flex-col items-start text-left select-none">
		<img id="play-button" src="{{ theme_path }}/assets/static/Play_Icon.svg" alt="Play video" class="h-16 sm:h-20 mb-2 sm:mb-4 cursor-pointer transition-transform hover:scale-110"/>
		<h2 class="text-2xl sm:text-3xl md:text-4xl text-[#9CC5F0] leading-tight">
			60 Years<br/>Empowering<br/>Excellence
		</h2>
	</div>

	<!-- Decorative asset -->
	<img src="{{ theme_path }}/assets/static/Footer_Aseet.svg" alt="footer asset" class="absolute bottom-0 left-0 h-20 sm:h-28 md:h-32 lg:h-30 xl:h-32 xl:!block hidden z-10"/>
</section>

<section
	class="!px-6 !py-8 flex flex-col lg:flex-row lg:items-start items-center lg:justify-around justify-center gap-12 !mb-24 relative z-[20]">
	<!-- LEFT SIDE -->
	<div class="flex flex-col gap-4 max-w-xl text-left">
		<h2 class="text-4xl font-normal text-[#285F99]">
			The Power of Purpose
		</h2>
		<p class="text-base sm:text-lg leading-7 sm:leading-9 lg:leading-12 text-[#5B5B5B]">
			Al Faisal Holding is one of Qatar’s leading private companies that
			          played a significant role in the development of the Qatar economy and
			          infrastructure, attracting many foreign investments and creating
			          immense career opportunities.
		</p>
		<button class="text-[#285F99] !mt-4 !px-4 !py-2 border border-[#9D8055] font-medium hover:bg-blue-100 transition-all duration-300 rounded text-lg text-left w-fit">
			Explore Faisal Holding
		</button>
	</div>

	<!-- RIGHT SIDE -->
	<div class="bg-[#E0E4E8]/90 w-full max-w-md !px-6 !py-10 rounded-2xl text-left xl:!-mt-56">
		<div class="flex flex-col gap-4 text-[#445467]">
			<h2 class="text-2xl sm:text-2xl">Our Establishment</h2>
			<p class="text-base sm:text-lg">
				Qatar’s economy and infrastructure attract many foreign investments
				            and create immense career opportunities.
			</p>
		</div>

		<!-- Stats Boxes -->
		<div
			class="flex flex-col gap-4 !mt-8 text-[#424557]">
			<!-- Top 3 boxes -->
			<div class="flex flex-wrap gap-4">
				<div class="flex-1 min-w-[100px] !px-4 !py-6 bg-[#F2F1F0] flex flex-col rounded-2xl">
					<h1 class="text-3xl sm:text-4xl">60</h1>
					<p class="text-xs sm:text-sm mt-2">years of</p>
					<p class="text-base sm:text-lg">Excellence</p>
				</div>
				<div class="flex-1 min-w-[100px] !px-4 !py-6 bg-[#F2F1F0] flex flex-col rounded-2xl">
					<h1 class="text-3xl sm:text-4xl">4000+</h1>
					<p class="text-xs sm:text-sm mt-2">of</p>
					<p class="text-base sm:text-lg">Employees</p>
				</div>
				<div class="flex-1 min-w-[100px] !px-4 !py-6 bg-[#F2F1F0] flex flex-col rounded-2xl">
					<h1 class="text-3xl sm:text-4xl relative">
						US
						<span class="absolute text-xs sm:text-sm left-10">$</span>
						5+
					</h1>
					<p class="text-xs sm:text-sm !mt-2">paid up</p>
					<p class="text-base sm:text-lg">Capital</p>
				</div>
			</div>

			<!-- Bottom box -->
			<div class="flex items-center gap-4 bg-[#F2F1F0] rounded-2xl !px-4 !py-6">
				<h1 class="text-2xl sm:text-3xl">100+</h1>
				<p class="text-base sm:text-lg">International Representatives</p>
			</div>
		</div>
	</div>
</section>

<section class="!px-4 sm:!px-8 lg:!px-12 !py-6 sm:!py-8 lg:!py-6 flex flex-col xl:flex-row items-center justify-around gap-6 sm:gap-8 lg:!mb-60 !mb-16 sm:!mb-24 relative">
	<img src="{{ theme_path }}/assets/static/AF_Element.svg" alt="" class="h-100 absolute z-0 top-90 left-[30%] xl:!block hidden"/>

	<div class="relative z-[10] w-full xl:w-auto flex justify-center">
		<img src="{{ theme_path }}/assets/static/chairman.jpg" alt="Chairman" class="h-56 sm:h-70 lg:h-100 xl:h-120 w-auto max-w-full object-cover rounded-lg"/>
	</div>

	<div class="flex flex-col gap-3 sm:gap-4 max-w-full sm:max-w-lg xl:max-w-sm relative z-[10] !px-2 sm:!px-0 items-center xl:items-start">
		<p class="leading-7 sm:leading-9 lg:leading-12 text-lg sm:text-2xl lg:text-3xl text-[#518DCC] font-normal text-center xl:text-left">
			"Today we pride ourselves on being a trustworthy household name both
			          in Qatar & beyond."
		</p>
		<p class="text-base sm:text-lg lg:text-xl font-medium text-[#518DCC] text-center xl:text-left">
			Sheikh Faisal Bin Qassim Al Thani - Chairman
		</p>
		<button class="text-[#285F99] !mt-2 sm:!mt-4 !px-3 sm:!px-4 w-[160px] sm:w-[200px] !py-1.5 sm:!py-2 border border-[#9D8055] font-medium hover:bg-blue-100 transition-all duration-300 rounded text-base sm:text-lg lg:text-xl">
			Read more
		</button>
	</div>
</section>

<section class="!px-4 sm:!px-8 lg:!px-12 !py-6 sm:!py-8 lg:!py-6 flex flex-col lg:flex-row items-center justify-around gap-8 lg:gap-16 !mb-16">
	<div class="w-full lg:w-auto">
		<div class="flex flex-col gap-3 sm:gap-4 !p-2 sm:!p-4">
			<h2 class="text-2xl sm:text-3xl lg:text-4xl font-normal text-[#285F99]">
				Global Footprint
			</h2>
			<p class="text-base sm:text-lg max-w-xl leading-7 sm:leading-9 lg:leading-12 text-[#5B5B5B]">
				Al Faisal Holding has a meticulously crafted investment strategy
				            based on thorough market research, ensuring the identification of
				            robust and growth-oriented sectors and geographies.
			</p>
		</div>

		<!-- Stats Cards -->
		<div class="flex flex-wrap sm:flex-nowrap gap-2 sm:gap-3 !ml-0 sm:!ml-4 !mt-6 sm:!mt-8 text-[#424557] justify-center sm:justify-start">
			<div class="w-28 h-36 sm:w-32 sm:h-40 lg:w-32 lg:h-40 !px-3 sm:!px-4 !py-6 sm:!py-8 bg-[#C6D9DE] flex flex-col items-center rounded-2xl">
				<h1 class="text-3xl sm:text-4xl text-left w-full">60</h1>
				<p class="text-xs sm:text-sm text-left w-full !mt-3 sm:!mt-4">
					years of
				</p>
				<p class="text-lg sm:text-xl w-full text-left">Excellence</p>
			</div>
			<div class="w-28 h-36 sm:w-32 sm:h-40 lg:w-32 lg:h-40 !px-3 sm:!px-4 !py-6 sm:!py-8 bg-[#C6D9DE] flex flex-col items-center rounded-2xl">
				<h1 class="text-3xl sm:text-4xl text-left w-full">4000+</h1>
				<p class="text-xs sm:text-sm text-left w-full !mt-3 sm:!mt-4">of</p>
				<p class="text-lg sm:text-xl text-left w-full">Employees</p>
			</div>
			<div class="w-28 h-36 sm:w-32 sm:h-40 lg:w-32 lg:h-40 !px-3 sm:!px-4 !py-6 sm:!py-8 bg-[#C6D9DE] flex flex-col items-center rounded-2xl">
				<h1 class="text-3xl sm:text-4xl text-left w-full relative">
					US
					<span class="absolute text-xs sm:text-sm left-9 sm:left-10">$</span>
					5+
				</h1>
				<p class="text-xs sm:text-sm text-left w-full !mt-3 sm:!mt-4">
					paid up
				</p>
				<p class="text-lg sm:text-xl text-left w-full">Capital</p>
			</div>
		</div>
	</div>

	<div class="w-full lg:w-auto flex justify-center">
		<img src="{{ theme_path }}/assets/static/Layer 24.png" alt="footprint" class="h-60 sm:h-80 lg:h-100 w-auto max-w-full object-contain"/>
	</div>
</section>
<section
	class="relative w-full h-[600px] md:h-[700px] lg:h-[800px] overflow-hidden rounded-3xl !px-4 sm:!px-8 !py-4 sm:!py-8 !mb-16">
	<!-- Background Image -->
	<img
	id="bg-image" src="{{ theme_path }}/assets/static/Business_Vericals_Slide1.jpg" alt="Al Jazi Background" class="absolute inset-0 !p-3 z-0 object-cover w-full h-full rounded-3xl overflow-clip"/>

	<!-- AF Element (hidden on smaller screens) -->
	<img
	src="{{ theme_path }}/assets/static/AF_Element2.svg" alt="" class="hidden lg:!block absolute -top-15 -left-15 h-150 z-10"/>

	<!-- Vertical List Container (Right Side - Inactive) - Desktop Only -->
	<div
		id="vertical-list-container" class="absolute right-8 sm:right-12 lg:right-20 hidden bottom-7 z-20 lg:!flex flex-row gap-0 h-[98.5%]"><!-- Inactive verticals will be inserted here by JS -->
	</div>

	<!-- Active Vertical Box (Left Side) - Desktop Only -->
	<div id="active-vertical-box" class="absolute bottom-0 left-20 z-20 lg:!flex hidden gap-2 flex-col items-center justify-end h-[98.5%] !p-4 transition-all duration-500">
		<p id="active-vertical-text" class="text-white text-xl tracking-widest !mb-4" style="
				            writing-mode: vertical-rl;
				            text-orientation: mixed;
				            transform: rotate(180deg);
				          ">
			REAL ESTATE
		</p>
		<div id="active-indicator" class="w-4 h-4 transition-colors duration-500 !mb-4"></div>
	</div>
	<div class="absolute left-40 bottom-3 h-[97%] !p-6 bg-white opacity-10 lg:!flex hidden"></div>

	<!-- Main Content - Desktop -->
	<div class="absolute lg:-bottom-50 lg:left-40 z-20 hidden lg:!flex items-center h-full !px-4 sm:!px-10 lg:!px-20">
		<div class="max-w-full sm:max-w-md lg:max-w-lg text-white !space-y-4 sm:!space-y-6">
			<h1 id="main-heading" class="text-xl sm:text-2xl md:text-3xl lg:text-3xl font-light underline tracking-wide underline-offset-12 transition-all duration-500">
				Al Jazi Real Estate
			</h1>
			<p id="main-description" class="text-[#b1b1b1] text-base sm:text-lg leading-7 sm:leading-9 lg:leading-12 max-w-full sm:max-w-lg lg:max-w-4xl">
				Established in 1995, Al Jazi Real Estate is a subsidiary of Al
				            Faisal Holding and a leading real estate developer in Qatar. Known
				            for its high-end residential and commercial properties.
			</p>
			<button class="text-white !mt-4 !px-4 w-[200px] !py-2 border-1 border-[#9D8055] font-medium hover:bg-[#9D8055] transition-all duration-300 rounded text-xl text-left">
				Explore
			</button>
		</div>
	</div>

	<!-- Mobile Layout - Stacked Vertically -->
	<div
		id="mobile-layout" class="lg:hidden absolute inset-0 z-20 flex flex-col !p-4 overflow-y-auto">
		<!-- Active Item Indicator (Top) -->
		<div id="mobile-active-box" class="flex items-center gap-3 !mb-4 !p-3 rounded-lg" style="background-color: rgba(255, 255, 255, 0.2)">
			<div id="mobile-active-indicator" class="w-4 h-4 flex-shrink-0"></div>
			<p id="mobile-active-text" class="text-white text-sm font-medium tracking-wide">
				REAL ESTATE
			</p>
		</div>

		<!-- Main Content (Middle) -->
		<div class="flex-1 flex flex-col justify-center text-white !space-y-3 !mb-4 !p-4">
			<h1 id="mobile-main-heading" class="text-lg font-light underline tracking-wide underline-offset-8 transition-all duration-500">
				Al Jazi Real Estate
			</h1>
			<p id="mobile-main-description" class="text-base sm:text-lg leading-7 sm:leading-9 lg:leading-12 text-[#b1b1b1] font-light">
				Established in 1995, Al Jazi Real Estate is a subsidiary of Al
				            Faisal Holding and a leading real estate developer in Qatar. Known
				            for its high-end residential and commercial properties.
			</p>
			<button class="text-white !mt-2 !px-3 w-[140px] !py-1.5 border border-[#9D8055] font-medium hover:bg-[#9D8055] transition-all duration-300 rounded text-sm text-left">
				Explore
			</button>
		</div>

		<!-- List Items (Bottom) -->
		<div
			id="mobile-list-container" class="flex flex-col w-full"><!-- Inactive verticals will be inserted here by JS -->
		</div>
	</div>
</section>
<section
